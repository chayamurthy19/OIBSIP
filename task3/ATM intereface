import java.util.*;
import java.io.*;
class BankAccount
{
    String name,username,pw,accno;
    Float balance=0f;
    int transactions=0;
    String transactionHistory="";
    public void register()
    {
        Scanner in=new Scanner(System.in);
        System.out.println("Enter Name.");
        this.name=in.nextLine();
        System.out.println("Enter Username.");
        this.username=in.nextLine();
        System.out.println("Enter password.");
        this.pw=in.nextLine();
        System.out.println("Enter accno.");
        this.accno=in.nextLine();
        System.out.println("Registration completed..");
    }
    public boolean login()
    {
        boolean isLogin=false;
        Scanner in=new Scanner(System.in);
        while(!isLogin)
        {
            System.out.println("Enter your UserName:");
            String name=in.nextLine();
            if(name.equals(username))
            {
                while(!isLogin)
                {
                    System.out.println("Enter password.");
                    String pword=in.nextLine();
                    if(pword.equals(pw))
                    {
                        System.out.println("Login Successful.");
                        isLogin=true;
                    }
                    else
                    {
                        System.out.println("Incorrect Password.");
                    }
                }
            }
            else
            {
                System.out.println("Username Invalid.");
            }

        }
        return isLogin;
    }

public void withdraw()
{
    System.out.println("Enter amount to withdraw.");
    Scanner in=new Scanner(System.in);
    float amount=in.nextFloat();
    try{
        if(balance>=amount)
        {
            transactions++;
            balance-=amount;
            System.out.println("Withdraw succesfull");
            String s=amount+" Rs withdrawed";
        }
        else{
            System.out.println("Insufficient balance");
        }
    }
    catch(Exception e)
    {

    }
}
public void deposit()
{
    System.out.print("Enter amount to deposit");
    Scanner in=new Scanner(System.in);
    float amount=in.nextFloat();
    try
    {
        if(amount<=100000f)
        {
            transactions++;
            balance+=amount;
            System.out.println("Successfully Deposit");
            String s=amount+"Rs deposited";
            transactionHistory=transactionHistory.concat(s);
        }
        else
        {
            System.out.println("Sorry................");
        }
    }
    catch(Exception e)
    {

    }
}
public void transfer()
{
    Scanner in=new Scanner(System.in);
    System.out.print("Enter reciepent Name");
    String receipent=in.nextLine();
    System.out.print("Enter amount to transfer");
    float amount=in.nextFloat();
    try
    {
        if(balance>=amount)
        {
            transactions++;
            balance-=amount;
            System.out.print("Successfully transfered");
            String s=amount+"Rs transfered"+receipent+"\n";
        }
        else
        {
            System.out.println("Sorry...........");
        }
    }
    catch(Exception e)
    {

    }
}
public void checkBalance()
{
    System.out.println(balance);
}
public void transHistory()
{
    if(transactions==0)
    {
        System.out.println("Empty");
    }
    else
    {
        System.out.println(transactionHistory);
    }
}
}
class atm
{
    public static void main(String args[])
    {
        Scanner in=new Scanner(System.in);
        System.out.println("**WELCOME TO SBI BANK*");
        System.out.println("\n 1.register\n 2.exit\n\n");
        System.out.println("Enter choice");
        int n=in.nextInt();
        if(n==1)
        {
            BankAccount b=new BankAccount();
            b.register();
            while(true)
            {
                System.out.println("\n1.Login \n2.exit");
                System.out.println("Enter choice");
                int ch=in.nextInt();
                if(ch==1)
                {
                    if(b.login())
                    {
                        System.out.println("\n\n****WeLCOME "+b.name+"***\n");
                        boolean isfinished=false;
                        while(!isfinished)
                        {
                            System.out.println("\n 1.Withdraw\n \n2.Deposit\n \n3.Transfer\n \n4.Check Balance\n \n5.transHistory\n \n 6.exit\n");
                            System.out.println("enter choice");
                            int c=in.nextInt();
                            switch(c)
                            {
                                case 1:b.withdraw();
                                       break;
                                case 2:b.deposit();
                                       break;
                                case 3:b.transfer();
                                       break;
                                case 4:b.checkBalance();
                                       break;
                                case 5:b.transHistory();
                                       break;   
                                case 6:System.exit(0);
                                       break;
                                

                            }
                        }
                    }
                    else
                    {
                        System.out.println("NOTHING");
                    }
                }
                else
                    {
                        System.out.println("NOTHING");
                    }
            }
        }
    }
}
